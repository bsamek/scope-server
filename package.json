{
  "name": "scout-server",
  "description": "Uses the nodejs native driver to provide an http api to mongodb",
  "version": "0.3.1",
  "scripts": {
    "fmt": "mongodb-js-fmt lib/{*.js,**/*.js} bin/*.js test/*.js",
    "ci": "mj-ci --verbose",
    "test": "mj-ci",
    "start": "NODE_ENV=development nodemon --no-stdin --watch lib bin/scout-server.js",
    "check": "mongodb-js-precommit"
  },
  "check": {
    "ignore": [
      "coverage/{*,**/*}"
    ]
  },
  "precommit": [
    "check"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/10gen/scout-server.git"
  },
  "bin": {
    "scout-server": "bin/scout-server.js"
  },
  "dependency-check": {
    "ignore": [
      "mongodb-core"
    ]
  },
  "dependencies": {
    "async": "^1.4.2",
    "body-parser": "^1.14.1",
    "boom": "^2.9.0",
    "bugsnag": "^1.6.6",
    "chalk": "^1.1.1",
    "csv-write-stream": "^1.0.0",
    "debug": "^2.2.0",
    "event-source-emitter": "0.0.2",
    "event-stream": "^3.3.2",
    "express": "^4.13.3",
    "figures": "^1.4.0",
    "joi": "^6.9.1",
    "jsonwebtoken": "^5.4.0",
    "lodash": "^3.10.1",
    "mongodb": "^2.0.46",
    "mongodb-collection-sample": "^0.1.3",
    "mongodb-connection-model": "^2.0.1",
    "mongodb-core": "^1.2.19",
    "mongodb-deployment-model": "^0.2.2",
    "mongodb-extended-json": "^1.5.2",
    "mongodb-favicon": "^0.0.1",
    "mongodb-instance-model": "^0.2.3",
    "mongodb-ns": "^1.0.0",
    "mongodb-read-preference": "^1.0.1",
    "mongoscope-config": "^0.1.0",
    "sift": "^2.0.9",
    "socket.io": "^1.3.7",
    "socket.io-stream": "0.8.0",
    "socketio-jwt": "^4.3.2",
    "uuid": "^2.0.1"
  },
  "devDependencies": {
    "cli-table": "^0.3.1",
    "eslint-config-mongodb-js": "^0.1.6",
    "mj": "mongodb-js/mj",
    "mocha": "^2.3.3",
    "mongodb-js-fmt": "0.0.3",
    "mongodb-js-precommit": "^0.2.2",
    "nodemon": "^1.7.1",
    "numeral": "^1.5.3",
    "pre-commit": "^1.1.1",
    "socket.io-client": "^1.3.7",
    "supertest": "^1.1.0"
  }
}
